{% extends 'base.html.twig' %}

{% block title %}un enclos{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <h1>Gestion des animaux de l'enclos : <b>{{ enclo.nom }}</b></h1>
        <table class="table table-striped">
            <tr>
                <th>nom</th>
                <th>identification</th>
                <th>Date naissance</th>
                <th>genre</th>
                <th>sexe</th>
                <th>espece</th>
                <th>sterile</th>
                <th>quarantaine</th>
                <th>zooProprietaire</th>
                <th>Date arrivé</th>
                <th>Date départ</th>
                <th></th>
            </tr>
            {% for a in animal %}
                <tr>
                    <td>{{ a.nom }}</td>
                    <td>{{ {% if(a.dateNaissance != null) %} {{a.dateNaissance.format('d-m-Y')}} {% endif %} }}</td>
                    <td>{{ a.identification }}</td>
                    <td>{{ a.genre }}</td>
                    <td>{{ a.sexe }}</td>
                    <td>{{ a.espece }}</td>
                    <td>{% if a.sterile == 0 %}
                            non
                        {% elseif a.sterile == 1%}
                            oui
                        {% endif %}</td>
                    <td>{% if a.quarantaine == 0 %}
                            non
                        {% elseif a.quarantaine == 1%}
                            oui
                        {% endif %}</td>
                    <td>{% if a.zooProprietaire == 0 %}
                            non
                        {% elseif a.zooProprietaire == 1%}
                            oui
                        {% endif %}</td>
                    <td>{{ {% if(a.dateArrivee != null) %} {{a.dateArrivee.format('d-m-Y')}} {% endif %} }}</td>
                    <td>{{ {% if(a.dateDepart != null) %} {{a.dateDepart.format('d-m-Y')}} {% endif %} }}</td>
                    <td>
                        <a href="{{ path("app_animal_modifier", {"id":a.id}) }}" class="btn btn-info">Modifier l'animal</a>
                        <a href="{{ path("app_animal_supprimer", {"id":a.id}) }}" class="btn btn-danger">Supprimer l'animal</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path("app_animal_ajouter") }}" class="mt-5 btn btn-primary">Ajouter un animal</a>
    </div>
{% endblock %}